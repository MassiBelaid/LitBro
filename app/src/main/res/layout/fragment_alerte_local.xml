<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AlerteLocalFragment">


    <TextView
        android:id="@+id/pasAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/noAlert"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/textTitreLocal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorFullBlack"
        android:text="@string/itemAlertLocal"
        android:textSize="30sp"
        android:textColor="@color/colorFullWhite"
        android:paddingStart="25dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleurAlerteLocal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textTitreLocal"
        />

</RelativeLayout>