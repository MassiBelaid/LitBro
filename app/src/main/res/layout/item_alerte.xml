<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text1Alerte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorFullBlack"
        android:text="local : "
        android:textSize="15sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textNomLocAlerte"
        android:textColor="@color/colorFullBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text1Alerte"
        android:textSize="15sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/text2Alerte"
        android:textColor="@color/colorFullBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1Alerte"
        android:text="Utilisateur : "
        android:textSize="15sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textUserAlerte"
        android:textColor="@color/colorFullBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNomLocAlerte"
        android:layout_toRightOf="@+id/text2Alerte"
        android:textSize="15sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/text3Alerte"
        android:textColor="@color/colorFullBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2Alerte"
        android:text="Date : "
        android:textSize="15sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textDateAlerte"
        android:textColor="@color/colorFullBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textUserAlerte"
        android:layout_toRightOf="@+id/text3Alerte"
        android:textSize="15sp"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btShowAlerte"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/text3Alerte"
        android:layout_centerHorizontal="true"
        android:text="@string/btShowAlerter"
        android:layout_marginTop="2dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:layout_below="@id/btShowAlerte"
        android:background="@color/colorYellowGold"
        />

</RelativeLayout>