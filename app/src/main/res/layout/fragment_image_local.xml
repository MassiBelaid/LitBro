<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ImageLocalFragment">


    <TextView
        android:id="@+id/pasImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/noImg"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/textTitre"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorFullBlack"
        android:text="@string/imgLocal"
        android:textSize="30sp"
        android:textColor="@color/colorFullWhite"
        android:paddingStart="25dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imgRecycleur"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textTitre"
        app:spanCount="2"
        />



</RelativeLayout>