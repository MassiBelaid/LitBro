<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ModifierLoginFragment"
    android:padding="20dp">


    <TextView
        android:id="@+id/textError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_above="@id/editLoginmodif"
        android:layout_marginBottom="40dp"
        android:textColor="@color/colorRedError"/>






    <EditText
        android:id="@+id/editLoginmodif"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/editPasswordmodif"
        android:autofillHints="@string/modifLoginHint"
        android:layout_alignStart="@+id/editPasswordmodif"
        android:hint="@string/loginHint"

        />





    <EditText
        android:id="@+id/editPasswordmodif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_centerInParent="true"
        android:inputType="textPassword"
        android:layout_above="@id/editPasswordmodif2"
        android:hint="@string/modifPasswordHint"
        android:autofillHints="@string/passwordHint" />





    <EditText
        android:id="@+id/editPasswordmodif2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/editPasswordmodif"
        android:inputType="textPassword"
        android:layout_above="@id/buttonConfirmer"
        android:hint="@string/modifPasswordHint2"
        android:autofillHints="@string/passwordHint" />




    <Button
        android:id="@+id/buttonConfirmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/buttonModifer"
        android:textColor="@color/colorFullWhite"
        android:background="@color/colorYellowGold"/>




    <ProgressBar
        android:id="@+id/progressBarModifLogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

</RelativeLayout>