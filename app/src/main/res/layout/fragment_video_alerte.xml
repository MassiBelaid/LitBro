<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.VideoAlerteFragment">

    <TextView
        android:id="@+id/textTitre"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorFullBlack"
        android:text="@string/textHisAlerte"
        android:textSize="25sp"
        android:textColor="@color/colorFullWhite"
        android:paddingStart="25dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        />

    <VideoView
        android:id="@+id/videoAlerte"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textTitre"
        android:layout_alignParentBottom="true"
        />

    <ProgressBar
        android:id="@+id/progressBarAlerterVid"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

</RelativeLayout>