<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorYellowGold"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/nomLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorFullBlack"
        android:layout_toLeftOf="@+id/imageLocal"
        />
    <ImageView
        android:id="@+id/imageLocal"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        />
    <Button
        android:id="@+id/btHisAlertes"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="@string/btHistoriquesAlertes"
        android:textSize="10sp"
        android:layout_below="@id/nomLocal"
        android:layout_marginTop="2dp"/>

    <Button
        android:id="@+id/btLive"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="@string/btLive"
        android:textSize="10sp"
        android:layout_below="@id/btHisAlertes"
        android:layout_marginTop="2dp"/>


</RelativeLayout>